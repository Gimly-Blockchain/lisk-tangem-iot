doctype html
html(lang="en")
  head
    title Lisk Transport Explorer
    link(href='favicon-32x32.png', rel='icon', type='image/png')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/themes/prism.min.css', rel='stylesheet')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/components/prism-core.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/plugins/autoloader/prism-autoloader.min.js')
    style
        include css/base.css
        include css/header.css

    body
    block menu
        header.header
            nav.navbar
                div.navbar-content
                    div.navbar-brand
                        a(href='/').lisk-logo
                        span.nav-brand__name-area
                            strong.nav-brand__name-area__title Transport
                    div#topbar-nav.navbar-menu
                        div.navbar-end
                            a(href='/accounts').navbar-item Accounts
                            a(href='/packet-accounts').navbar-item Packet &amp; Carrier
                            a.divider-vertical
                            a(href='/faucet').navbar-item Faucet
                            a(href='/initialize').navbar-item Initialize
                            a(href='/post-register-packet').navbar-item Register Packet
                            a(href='/post-start-transport').navbar-item Start Transport
                            a(href='/post-finish-transport').navbar-item Finish Transport

    .container
      block content
        .jumbotron
          h1 Lisk Transport Explorer
          p.lead
            | Browse transactions for Lisk Transport Proof of Concept
