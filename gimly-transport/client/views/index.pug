doctype html
html(lang="en")
  head
    title NFC Smart Card &amp; Lisk Transport Demonstration
    link(href='favicon-32x32.png', rel='icon', type='image/png')
    link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', rel='stylesheet')
    link(href='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/themes/prism.min.css', rel='stylesheet')
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/components/prism-core.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/prism/1.17.1/plugins/autoloader/prism-autoloader.min.js')
    style
        include css/base.css
        include css/header.css

    body
    block menu
        header.header
            nav.navbar
                div.navbar-content
                    div.navbar-brand
                        a(href='/').lisk-logo
                        a(href='/').gimly-logo
                    div#topbar-nav.navbar-menu
                        div.navbar-end
                           a(href='/smart').navbar-item Smart Package
                           a.divider-vertical
                           a(href='/accounts').navbar-item Accounts
                           a(href='/packet-accounts').navbar-item History
    .container
      block content
        .jumbotron
          h1 NFC Smart Card &amp; Lisk Transport Demonstration
          p.lead
            | Connect smartcard reader and select Smart Package to start
          p.lead
            | Select Accounts to view account status 
          p.lead
            | Select History to view transport status

